<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/name">

    <ImageView
            android:layout_width="412dp"
            android:layout_height="731dp"
            android:id="@+id/mainFrameBg"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="411dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginBottom="715dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.011" android:background="#000000"/>
    <ImageView
            android:layout_width="258dp"
            android:layout_height="85dp" app:srcCompat="@android:color/holo_orange_light"
            android:id="@+id/imageView5"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="@+id/mainFrameBg" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/mainFrameBg" app:layout_constraintVertical_bias="0.1"
            app:layout_constraintEnd_toEndOf="@+id/imageView4" android:layout_marginEnd="64dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="127dp"
            android:layout_height="117dp" app:srcCompat="@drawable/icon_cinema_flat"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/mainFrameBg" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/mainFrameBg" app:layout_constraintVertical_bias="0.082"/>
    <TextView
            android:layout_width="177dp"
            android:layout_height="96dp"
            android:text="Monster Cinema"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView5" android:id="@+id/myTitle"
            android:textSize="30sp" android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="@font/audiowide"
            android:textColor="#FDFAFA" android:textColorHighlight="#050505"
            android:textDirection="firstStrongLtr" android:tooltipText="Text"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:imeOptions="actionDone"
            android:id="@+id/passwordInput" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:textColorHint="#AFACAC" android:textColor="#FFFFFF" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/mainFrameBg" android:backgroundTint="#A7A7A7"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Identifiant"
            android:ems="10"
            android:id="@+id/emailInput" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/myTitle"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/passwordInput"
            app:layout_constraintVertical_bias="0.631" android:contentDescription="Your Name"
            android:textColor="#F8F6F6" android:backgroundTint="#BDBCBC"
            android:textColorHint="#C2BDBD" android:textAlignment="center" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Se connecter"
            android:layout_width="182dp"
            android:layout_height="92dp"
            android:id="@+id/connection"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.333"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:fontFamily="@font/audiowide" android:textSize="18sp"
            android:textColor="#FDF8F8" android:background="#000000" android:typeface="normal"
            android:textStyle="bold" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="199dp"
            android:layout_height="46dp"
            android:id="@+id/errorMsg" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/mainFrameBg" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/mainFrameBg" app:layout_constraintVertical_bias="0.59"
            android:textColor="#DA1616" android:visibility="invisible" android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>